<h2>イベント情報</h2>
<% events.each do |event| %>
<p><b>日時</b></p>
<%= event.start.date.to_s.gsub("-", "/") %>
<p><b>詳細</b></p>
<%= event.summary %>
<p><b>場所</b></p>
<%= event.location %>
<br><br>
<% end %>

<h2>試合情報</h2>
<%=matches.first.start.date.class%>
<% matches.each do |match| %>
<p><b>日時</b></p>
<%= match.start.date_time.to_s.sub("+09:00","") .gsub(/T|-/,"/")%> 〜 <%= match.end.date_time.to_s.sub("+09:00","").gsub(/T|-/,"/") %>
<p><b>詳細</b></p>
<%= match.summary %>
<p><b>場所</b></p>
<%= match.location %>
<br><br>
<% end %>

